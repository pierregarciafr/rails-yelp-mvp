<div class="navbar-lewagon px-3 py-2">
  <div class="container">
    <div class="row">
      <div class="col-center">
        <div class="nav-flex">
          <h1><%= @restaurant.name %></h1>
          <%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
<%= link_to "Back to list", restaurants_path, class: "btn btn-primary" %>

        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-center">
      <div class="nav-flex">
        <ul class='list-inline pt-5'>
          <li><%= @restaurant.category %></li>
          <li><%= @restaurant.address %></li>
          <li><%= @restaurant.phone_number %></li>
          <!-- ... -->
          <ul class="list-group">
            <% @restaurant.reviews.each do |review| %>
            <li class="list-group-item">
              <%= review.content %>
              <%= '*' * review.rating %>
            </li>
            <% end %>
          </ul>
        </ul>
      </div>
    </div>
  </div>
</div>

